<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/frmLayoutItemCalendar"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/cellDayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/item_calendar_background_white"
        android:gravity="center"
        android:padding="10dp"
        android:text="1"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/lnLayoutDotsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:id="@+id/dot1"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_margin="2dp"
            android:background="@drawable/calendar_dot_blue" />

        <View
            android:id="@+id/dot2"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_margin="2dp"
            android:background="@drawable/calendar_dot_red" />

        <View
            android:id="@+id/dot3"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_margin="2dp"
            android:background="@drawable/calendar_dot_yellow" />

    </LinearLayout>


</FrameLayout>